{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es2019",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    // "declarationDir": "dist/_types",
    "paths": {
      "@application/*": [
        "src/application/*"
      ],
      "@logic/*": [
        "src/logic/*"
      ],
      "@model/*": [
        "src/model/*"
      ],
      "@ports/*": [
        "src/ports/*"
      ],
      "@type_util/*": [
        "src/types/*"
      ]
    },
    "lib": [
      "es2019"
    ],
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      "reflect-metadata"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "__test__/**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
